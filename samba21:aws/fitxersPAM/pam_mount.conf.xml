<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE pam_mount SYSTEM "pam_mount.conf.xml.dtd">
<!--
	See pam_mount.conf(5) for a description.
-->

<pam_mount>

		<!-- debug should come before everything else,
		since this file is still processed in a single pass
		from top-to-bottom -->

<debug enable="0" />
    <!-- Volume definitions -->

  <!-- muntar ~/mytmp amb un ramdisk de 100M -->
    <volume
       user="*"
       fstype="tmpfs"
       mountpoint="~/mytmp"
       options="size=100M" 
    />

<!-- muntar a ~/man el recurs NFS 172.18.0.1:/usr/share/doc 
     <volume
         user="*"
	 fstype="nfs"
	 server="172.18.0.1"
         path="/usr/share/man"
         mountpoint="~/man"
	/>
	-->

<!-- muntar nomÃ©s per  a unix02 ~/unix02/mydoc  NFS 172.18.0.1:/usr/share/doc
     <volume
         user="unix02"
         fstype="nfs"
         server="172.18.0.1"
         path="/usr/share/doc"
         mountpoint="~/%(USER)/mydoc"
     />
-->

     <!-- PER A LDAP i UNIX:  path="sshfs#(USER)@172.19.0.3:./. -->	

     <!--	     
